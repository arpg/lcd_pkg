<launch>
  <node name="lcd_node" pkg="lcd_pkg" type="lcd_node"  output="screen" >
  
  <param name = "arraySize_param" type = "int" value="8"/>
  <param name = "mseThreshold_param" type = "double" value="0.2"/>
  
  </node>
    
  <node pkg="rosbag" type="play" name="bag_player" args="$(find lcd_pkg)/../../bags/cartographer_2019-07-09-23-36-38.bag"/>

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find lcd_pkg)/rviz/rviz_config.rviz" />
</launch>


<!-- arraySize_param: Number of previous trajectory points maintained for comparison -->
<!-- mseThreshold_param: Mean square error threshold for similarity metric -->

